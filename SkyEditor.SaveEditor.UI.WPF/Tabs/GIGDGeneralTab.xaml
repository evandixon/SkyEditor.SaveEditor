<skywpf:ObjectControl x:Class="Tabs.GIGDGeneralTab"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:skywpf="clr-namespace:SkyEditor.UI.WPF;assembly=SkyEditor.UI.WPF"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid>
        <UniformGrid Columns="2" Rows="1" HorizontalAlignment="Left" Width="400" VerticalAlignment="Top">
            <Label x:Name="lblGeneral_HeldMoney" HorizontalAlignment="Left" Width="200">Held Money:</Label>
            <xctk:IntegerUpDown x:Name="numGeneral_HeldMoney" Minimum="0" Maximum="99999" VerticalContentAlignment="Top" HorizontalContentAlignment="Right" />
            <Label x:Name="lblCompanionHeldMoney" HorizontalAlignment="Left" Width="200">Companion Mode Held Money:</Label>
            <xctk:IntegerUpDown x:Name="numCompanionHeldMoney" Minimum="0" Maximum="99999" VerticalContentAlignment="Top" HorizontalContentAlignment="Right" />
        </UniformGrid>        
    </Grid>
</skywpf:ObjectControl>