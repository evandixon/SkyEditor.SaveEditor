<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:SkyEditor.SaveEditor.UI.Avalonia.ViewModels;assembly=SkyEditor.SaveEditor.UI.Avalonia"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SkyEditor.SaveEditor.UI.Avalonia.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="SkyEditor.SaveEditor.UI.Avalonia">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

  <StackPanel>
    <Menu>
      <MenuItem Header="_File">
        <MenuItem Header="Open" Command="{Binding OpenFileCommand}" />
      </MenuItem>
    </Menu>
    <TabControl Items="{Binding OpenFiles}">
      <TabControl.ItemTemplate>
        <DataTemplate>
          <TextBlock Text="{Binding FileName}" />
        </DataTemplate>
      </TabControl.ItemTemplate>
      <TabControl.ContentTemplate>
        <DataTemplate>
          <ContentControl Content="{Binding .}" />
        </DataTemplate>
      </TabControl.ContentTemplate>
    </TabControl>
  </StackPanel>   

</Window>
